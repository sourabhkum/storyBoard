<div class="row">
    <div class="col s12 m9 card">
        <h5>Edit Stories</h5>
        <form action="/stories/edit/{{story.id}}?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
            <div class="input-field row">
                <input name="title" type="text" class="validate" value="{{story.title}}">
                <label for="title">Title</label>

            </div>
            <div class="input-field row">
                <select name="status">
                    {{#select story.status}}
                    <option value="Publish">Publish</option>
                    <option value="Public">Public</option>
                    <option value="Private">Private</option>
                    {{/select}}
                </select>
                <label>Status</label>
            </div>
            <div class="row">
                <p>
                    <input type="checkbox" name="allowComment" class="filled-in" id="comment" {{#if story.allowComment}} checked="checked" {{/if}}>
                    <label for="comment">Allow Comment</label>
                </p>
            </div>
            <div class="row ">
                <div class="input-field">
                    <h5>Tell us Your story</h5>
                    <textarea name="body">{{story.body}}</textarea>

                </div>

            </div>
            <input class="btn waves-effect waves-light bottom-btn" type="submit" value="Save">
        </form>
    </div>
</div>
</div>