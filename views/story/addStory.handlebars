  <div class="row">
      
 <div class="col s12 m9 card">
     
<form action="add" method="post">
    <div class="input-field row">
        <input name="title" type="text" class="validate" value="{{title}}">
        <label for="title">Title</label>

    </div>
    <div class="input-field row">
        <select name="status">
            <option value="Public">Public</option>
            <option value="Private">Private</option>
            <option value="Publish">Publish</option>
            
        </select>
        <label>Status</label>
    </div>
    <div class="row">
        <p>
            <input type="checkbox" name="allowComment" id="comment" checked="checked" />
            <label for="comment">Allow Comment</label>
        </p>
    </div>
    <div class="row ">
        <div class="input-field">
            <h5>Tell us Your story</h5>
             <textarea name="body" >{{body}}</textarea>
           
        </div>
        
    </div>
<input class="btn waves-effect waves-light bottom-btn" type="submit" value="Save">
</form>
</div>
  </div>
</div>