<div class="card welcome-margin ">
    <div class="card-body">
      <div class="row">
        {{#if user}} {{else}}
          <div class="col s12 m6">
             <h6 class="login-header">Login with a Social Network</h6>
            <div class="social-container">
            <a class="btn red  social-button social google " href="/auth/google">
              <i class="fa fa-google left" aria-hidden="true"></i> Sign in with google</a>
            <br>
            <a class="btn social-button social facebook" href="/auth/facebook">
              <i class="fa fa-facebook "></i> Sign in with facebook</a>
            <br>
            <a class=" social-button  btn social twitter" href="/auth/twitter">
              <i class="fa fa-twitter left"></i> Sign in with twitter</a>
              
          </div>
        </div>
          <div class="col s12 m1">
            <div class="vl"></div>
          </div>
        <div class="col s12 m5 login-divider">
          <h6 class="login-header">Sign in Manually</h6>
           <div class="login-container">
          <form action="/auth" method="post">
            <div class="input-field col s12">
              <label for="email">Email</label>
              <input type="email" name="email" class="form-control" autofocus required {{email}}>
            </div>
            <div class="input-field col s12">
              <label for="password">Password</label>
              <input type="password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn red center">Login</button>
          </form>
          <div class="registrationLink">
            Don't have an account <a href="/auth/registration">Sign up?</a></div>
          </div>
        </div>
      </div>
      
    </div>
  {{/if}}