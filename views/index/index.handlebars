<div class="row">
{{#each stories}}
<div class="col s12 m4">
    <div class="card">
        <div class="card-content center-align">
            <h5>{{title}}</h5>
            
            <p class="story-text">{{{truncate body 120}}}</p>
            <div class="chip">
                <img src="{{user.image}}" alt="Contact Person"> {{user.firstName}} {{user.lastName}}
            </div>
        </div>
        <div class="card-action center-align">
              <a href="stories/show/{{id}}">ReadMore</a>
            </div>
        
    </div>
</div>
{{else}}
<p>No Stories</p>
{{/each}}
</div>

